<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reg_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_person_add_black_24dp"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/reg_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/vermelho"
            android:textSize="18sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_nome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textColorHint="#9a9a9a">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="15dp"
                android:hint="@string/cadastro_txt_nome"
                android:inputType="text|textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_numero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="15dp"
                android:hint="@string/cadastro_txt_numero"
                android:inputType="phone"
                android:textColorHint="@color/logo" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:drawablePadding="15dp"
                android:hint="@string/cadastro_txt_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/logo" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_senha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="15dp"
                android:hint="@string/cadastro_txt_senha"
                android:inputType="textPassword"
                android:textColorHint="@color/logo" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_csenha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="15dp"
                android:hint="@string/cadastro_txt_csenha"
                android:inputType="textPassword"
                android:textColorHint="@color/logo" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/reg_entrar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/designer_layout_buttons"
                android:drawableStart="@drawable/ic_mail_white_24dp"
                android:padding="10dp"
                android:text="@string/cadastro_btn_cadastrar"
                android:textSize="15sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:text="Ou"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reg_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/designer_layout_buttonsf"
                android:drawableLeft="@drawable/ic_facebook_logo"
                android:paddingLeft="5dp"
                android:text="@string/cadastro_btn_facebook"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>